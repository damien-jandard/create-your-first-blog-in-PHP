{% extends "layout.html.twig" %}

{% block body %}
    <!-- Login Section-->
    <section class="masthead page-section" id="register">
        <div
            class="container">
            <!-- Login Section Heading-->
            <h2 class="page-section-heading text-center text-uppercase text-secondary mb-0">Se connecter</h2>
            <!-- Icon Divider-->
            <div class="divider-custom">
                <div class="divider-custom-line"></div>
                <div class="divider-custom-icon">
                    <i class="fas fa-star"></i>
                </div>
                <div class="divider-custom-line"></div>
            </div>
            <!-- Login Section Form-->
            <div class="row justify-content-center">
                <div class="col-lg-8 col-xl-7">
                    <!-- * * * * * * * * * * * * * * *-->
                    <!-- * * Login Form * *-->
                    <!-- * * * * * * * * * * * * * * *-->
                        <form
                        id="loginForm" method="post" action="?action=postlogin"> <!-- Email address input-->
                        <div class="form-floating mb-3">
                            <input class="form-control" id="email" name="email" type="email" placeholder="name@example.com" {% if _get['email'] %} value={{ _get['email'] }} {% endif %}/>
                            <label for="email">Email</label>
                        </div>
                        <!-- Password input-->
                        <div class="form-floating mb-3">
                            <input class="form-control" id="password" name="password" type="password" placeholder="JdIcA48*"/>
                            <label for="password">Mot de passe</label>
                        </div>
                        <p class="mb-3">Pas encore membre ?
                            <a href="?action=register">S'incrire</a>
                        </p>
                        <!-- Submit Button-->
                        <button class="btn btn-primary btn-xl" id="submitButton" type="submit">Se connecter</button>
                    </form>
                    {% if _get['activate'] %}
                        {% if _get['activate'] == 'check' %}
                            <div class="alert alert-warning mt-3" role="alert">Merci pour votre inscription. Pensez à activer votre compte en cliquant sur le lien envoyé par email</div>
                        {% elseif _get['activate'] == 'checked' %}
                            <div class="alert alert-success mt-3" role="alert">Votre compte est désormais activé. Vous pouvez dès à présent vous connecter</div>
                        {% endif %}
                    {% endif %}
                    {% if _get['authentication'] %}
                        {% if _get['authentication'] == 'failed' %}
                            <div class="alert alert-danger mt-3" role="alert">Utilisateur ou mot de passe incorrect.</div>
                        {% elseif _get['authentication'] == 'empty' %}
                            <div class="alert alert-danger mt-3" role="alert">Les champs ne peuvent pas être vide.</div>
                        {% endif %}
                    {% endif %}
                </div>
            </div>
        </div>
    </section>
{% endblock %}